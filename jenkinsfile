pipeline {
    agent any

    environment {
        DOCKERHUB_USER        = "asha12345"                  
        IMAGE_NAME            = "${DOCKERHUB_USER}/flipkart-ui"
        IMAGE_TAG             = "latest"
        DOCKERHUB_CREDENTIALS = "dockerhub-cred"             
        CONTAINER_NAME        = "flipkart-ui-container"
        HOST_PORT             = "8086"                       
        CONTAINER_PORT        = "80"                         
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', env.DOCKERHUB_CREDENTIALS) {
                        dockerImage.push()                          
                        dockerImage.push("${env.BUILD_NUMBER}")     
                    }
                }
            }
        }

        stage('Run Container on Port') {
            steps {
                script {
                    
                    sh """
                        docker rm -f ${CONTAINER_NAME} || true
                    """

                    
                    sh """
                        docker run -d --name ${CONTAINER_NAME} -p ${HOST_PORT}:${CONTAINER_PORT} ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "âœ… Docker image built, pushed, and container running on port ${HOST_PORT}"
        }
        
    }
}

